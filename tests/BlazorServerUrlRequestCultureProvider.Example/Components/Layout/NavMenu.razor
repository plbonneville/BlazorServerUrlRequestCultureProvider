@inject IStringLocalizer<App> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">url-based-localization-scheme-for-blazor-server</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Localizer["/counter"]">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> @Localizer["Counter"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Localizer["/weather"]">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @Localizer["Weather"]
            </NavLink>
        </div>
    </nav>
</div>

